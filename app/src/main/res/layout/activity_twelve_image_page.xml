<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/xOutOf6ImageSelectCounter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="X out of 6 Images Correct"
        android:padding="2dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/timeCount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.2">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/timeCount"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="XX:XX"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/xOutOf6ImageSelectCounter"
        app:layout_constraintRight_toRightOf="parent">
    </androidx.appcompat.widget.AppCompatButton>


    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/xOutOf6ImageSelectCounter"
        app:layout_constraintBottom_toBottomOf="parent"
        android:numColumns="3"
        android:divider="#e5e5ff"
        android:dividerHeight="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>