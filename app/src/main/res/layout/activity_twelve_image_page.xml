<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gridView"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/xOutOf6ImageSelectCounter"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="2dp"
            android:max="6"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/timeCount"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Start"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@null"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/timeCount"
            app:layout_constraintRight_toRightOf="parent">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timeCount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:background="@color/white"
            android:text="00:00:00"
            android:textSize="22sp"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/xOutOf6ImageSelectCounter"
            app:layout_constraintRight_toRightOf="@id/startReset">
        </androidx.appcompat.widget.AppCompatTextView>


    </androidx.appcompat.widget.Toolbar>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:numColumns="3"
        android:divider="#e5e5ff"
        android:dividerHeight="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>